<!doctype html>
<html lang="en">

<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>홈</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">

<body>
  <!-- 로고 네비게이션 바 -->
  <nav class="navbar navbar-light bg-light" style="padding-left: 60px; padding-right: 60px;">
    <div class="container-fluid px-5">
      <a class="navbar-brand" href="/">
        <img src="/image/link_logo_active.png" alt="로고">
      </a>
      <div class="d-flex ms-auto">
        <% if(user){ %>
          <h5 style="margin-right: 20px; font-family: '돋움체'; font-weight: bold;">반갑습니다. <%= user.userid %>님</h5>
          <a href="/logout">로그아웃</a>
        <% }else{%>
          <ul class="navbar-nav d-flex flex-row">
            <li class="nav-item">
              <a class="nav-link" href="/login">로그인</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/signup">회원가입</a>
            </li>
          </ul>
        <% } %>
      </div>
    </div>
  </nav>

  <%- include('menu.html') %>

  <div class="container">
    <img src="/image/001479_1800.jpg" alt="대구가톨릭대학교 다솜마을" class="img-fluid" style="width: 2000px;">
  </div>

  <div class="container mt-4">
    <!-- 공지사항 테이블 -->
    <div class="section">
      <h2>공지사항</h2>
      <table class="table table-hover table-striped text-center">
        <thead class="table-dark">
          <tr>
            <th>제목</th>
            <th>작성자</th>
            <th>작성일</th>
          </tr>
        </thead>
        <tbody>
          <% for (let post of posts) { %>
            <tr>
              <td><a href="/content/<%= post._id %>?target=post"><%= post.title %></a></td>
              <td><%= post.userid %></td>
              <td><%= post.date %></td>
            </tr>
          <% } %>
        </tbody>
      </table>
      <a href="/list" class="btn btn-primary btn-more">더보기</a>
    </div>

    <!-- 활동내용 테이블 -->
    <div class="section">
      <h2>활동내용</h2>
      <table class="table table-hover table-striped text-center">
        <thead class="table-dark">
          <tr>
            <th>제목</th>
            <th>작성자</th>
            <th>작성일</th>
          </tr>
        </thead>
        <tbody>
          <% for (let report of reports) { %>
            <tr>
              <td><a href="/content/<%= report._id %>?target=report"><%= report.title %></a></td>
              <td><%= report.userid %></td>
              <td><%= report.date %></td>
            </tr>
          <% } %>
        </tbody>
      </table>
      <a href="/report" class="btn btn-primary btn-more">더보기</a>
    </div>

    <!-- 소통 테이블 -->
    <div class="section">
      <h2>소통</h2>
      <table class="table table-hover table-striped text-center">
        <thead class="table-dark">
          <tr>
            <th>제목</th>
            <th>작성자</th>
            <th>작성일</th>
          </tr>
        </thead>
        <tbody>
          <% for (let community of communities) { %>
            <tr>
              <td><a href="/content/<%= community._id %>?target=community"><%= community.title %></a></td>
              <td><%= community.userid %></td>
              <td><%= community.date %></td>
            </tr>
          <% } %>
        </tbody>
      </table>
      <a href="/community" class="btn btn-primary btn-more">더보기</a>
    </div>
  </div>

    <script src="http://code.jquery.com/jquery-1.12.4.min.js"></script>
    <script>
      $('.login').click(function (e) {
        location.href = '\login';
      })


      $('.signup').click(function (e) {
        location.href = '\signup';
      })
    </script>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
      crossorigin="anonymous"></script>
</body>

</html>