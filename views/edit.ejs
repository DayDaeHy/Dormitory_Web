<!doctype html>
<html lang="en">

<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>Edit</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
  <link href="/style.css" rel="stylesheet">
</head>


<body>

  <!-- 로고 네비게이션 바 -->
  <nav class="navbar navbar-light bg-light" style="padding-left: 60px; padding-right: 60px;">
    <div class="container-fluid px-5">
      <a class="navbar-brand" href="/">
        <img src="/image/link_logo_active.png" alt="로고">
      </a>
      <div class="d-flex ms-auto">
        <% if(user){ %>
          <h5 style="margin-right: 20px; font-family: '돋움체'; font-weight: bold;">반갑습니다. <%= user.userid %>님</h5>
          <a href="/logout">로그아웃</a>
          <% }else{%>
            <ul class="navbar-nav d-flex flex-row">
              <li class="nav-item">
                <a class="nav-link" href="/login">로그인</a>
              </li>
              <li class="nav-item">
                <a class="nav-link" href="/signup">회원가입</a>
              </li>
            </ul>
            <% } %>
      </div>
    </div>
  </nav>

  <%- include('menu.html') %>

    <div class="container mt-4">
      <form action="/edit" method="post" enctype="multipart/form-data">
        <input type="hidden" name="target" value="<%= target %>">
        <div class="form-group">
          <label>제목</label>
          <input type="text" value="<%= data._id%>" name="id" style="display:none;">
          <input type="text" value="<%= data.title %>" name="title" class="form-control">
        </div>
        <p></p>
        <div class="form-group">
          <label>내용</label>
          <textarea name="content" rows="10" class="form-control"><%= data.content %></textarea>
        </div>
        <p></p>
        <div class="form-group">
          <label>현재 첨부된 사진</label>
          <% if (data.path) { %>
            <img src="<%= data.path %>" width="200" />
            <p></p>
            <% } else { %>
              <p>첨부된 사진이 없습니다.</p>
              <% } %>
        </div>
        <p></p>
        <div class="form-group">
          <label>새 사진 첨부</label>
          <input type="file" name="picture" accept=".jpg, .jpeg" class="form-control">
        </div>
        <p></p>
        <button type="submit" class="btn btn-warning" style="float:right;" data-target='<%= target %>'>수정</button>
      </form>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
      crossorigin="anonymous"></script>
</body>

</html>